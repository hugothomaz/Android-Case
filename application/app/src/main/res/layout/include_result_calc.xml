                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@+id/label_layout_fuel_price"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_layout_num_axis"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:bindTextAxis="@{freightModel.axis}"
                app:layout_constraintEnd_toEndOf="@+id/label_layout_num_axis"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_layout_num_axis"
